<mvc:View
    controllerName="com.lab2dev.firstapp.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <List
                headerText="Produtos"
                headerLevel="H2"
                busyIndicatorDelay="0"
                items="{products>/}"
            >
                <ObjectListItem
                    title="{products>ProductName}"
                    number="{products>UnitPrice}"
                    numberUnit="USD"
                    type="Active"
                    press="onPress"
                >
                    <firstStatus>
                        <ObjectStatus
                            text="{products>Discontinued}"
                            state="Success"
                        />
                    </firstStatus>

                    <ObjectAttribute text="{products>Category/CategoryName}" />

                    <ObjectAttribute text="{products>UnitsInStock} in Stock" />

                    <ObjectAttribute text="{products>QuantityPerUnit}" />
                </ObjectListItem>
            </List>
        </content>
    </Page>
</mvc:View>
