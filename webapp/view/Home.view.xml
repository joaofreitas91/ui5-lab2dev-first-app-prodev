<mvc:View
    controllerName="com.lab2dev.firstapp.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <subHeader>
            <Toolbar>
                <SearchField
                    id="searchField"
                    liveChange="onSearch"
                    width="50%"
                    placeholder="{i18n>searchPlaceholder}"
                />
                <SearchField
                    id="searchFieldOData"
                    search="onSearchOData"
                    width="50%"
                    placeholder="{i18n>searchPlaceholderOdata}"
                />
            </Toolbar>
        </subHeader>

        <content>
            <List
                id="list"
                headerText="{i18n>products}"
                headerLevel="H2"
                items="{
                    path: 'products>/', 
                    sorter: {
                        path: 'Category/CategoryName',
                        group: true,
                        descending: false
                    }
                }"
            >
                <ObjectListItem
                    title="{products>ProductName}"
                    number="{products>UnitPrice}"
                    numberUnit="USD"
                    type="Active"
                    press="onPress"
                >
                    <firstStatus>
                        <ObjectStatus
                            text="{products>Discontinued}"
                            state="Success"
                        />
                    </firstStatus>

                    <ObjectAttribute text="{products>Category/CategoryName}" />

                    <ObjectAttribute text="{products>UnitsInStock} in Stock" />

                    <ObjectAttribute text="{products>QuantityPerUnit}" />
                </ObjectListItem>
            </List>
        </content>
    </Page>
</mvc:View>
